{
  "name": "colorize-template",
  "version": "0.1.1",
  "description": "Tagged template literal for ANSI colors.",
  "keywords": [
    "colors",
    "console",
    "formatting",
    "terminal",
    "nanocolors",
    "picocolors",
    "colorette",
    "kleur",
    "colors.js",
    "chalk"
  ],
  "author": "Usman Yunusov <usman.iunusov@gmail.com>",
  "license": "MIT",
  "repository": "usmanyunusov/colorize-template",
  "main": "index.js",
  "types": "./index.d.ts",
  "browser": {
    "./index.js": "./index.browser.js"
  },
  "sideEffects": false,
  "scripts": {
    "test": "jest --coverage",
    "lint": "prettier --write '*.{js,ts}'"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@types/jest": "^27.0.2",
    "clean-publish": "^2.2.0",
    "jest": "^27.2.1",
    "picocolors": "^0.2.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
